{
  "compilerOptions": {
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./types",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./lib/",
    "lib": ["es2017", "es7", "es6", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}